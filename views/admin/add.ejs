<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>

    <body>
        <div class="header-2">
            <div class="container">
                <%- include('../partials/nav.ejs') %>
            </div>
        </div>

        <div class="med-add">
            <form action="/admin" method="POST">
                <label for="name">Enter Your Medicine Name: </label>
                <input type="text" name="name" id="name">
                <label for="price">Enter Your Price($): </label>
                <input type="number" name="price" id="price">
                <label for="src">Enter Your Medicine Image Link: </label>
                <input type="text" name="src" id="src">
                <label for="desc">Describe your product: </label><br>
                <textarea name="desc" id="desc" cols="30" rows="10"></textarea>
                <label for="type">Enter Your Medicine Type: </label>
                <input type="text" name="type" id="type">
                <br>
                <button class="btn">Add</button>
            </form>
        </div>


        <!------------Footer-------------->
        <%- include('../partials/footer.ejs') %>
    </body>
    <script>
        var MenuItems = document.getElementById("MenuItems");
        MenuItems.style.maxHeight = "0px";

        function menuToggle() {
            if (MenuItems.style.maxHeight == "0px") {
                MenuItems.style.maxHeight = "200px"
            } else {
                MenuItems.style.maxHeight = "0px"
            }
        }
    </script>

</html>